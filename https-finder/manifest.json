{
  "manifest_version": 2,

  "name": "HTTPS Finder",
  "description": "Detects if pages are available on HTTPS and allows you to switch",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["https-finder.js"]
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Page available on HTTPS. Click to switch."
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "activeTab",
    "declarativeContent",
    "webNavigation",
    "storage",
    "<all_urls>"
  ]
}
